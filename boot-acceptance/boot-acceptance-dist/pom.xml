<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <parent>
    <groupId>com.sun.sgs.tests</groupId>
    <artifactId>boot-acceptance-parent</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>

  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sun.sgs.tests</groupId>
  <artifactId>boot-acceptance-dist</artifactId>
  <name>SGS Boot Acceptance Tests Distribution</name>
  <packaging>pom</packaging>
  <description />
  
  <build>
    <plugins>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/dist.xml</descriptor>
          </descriptors>
        </configuration>
	<executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>attached</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>com.sun.sgs.tests</groupId>
      <artifactId>boot-acceptance</artifactId>
      <version>${version}</version>
    </dependency>
  </dependencies>
</project>
