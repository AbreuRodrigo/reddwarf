<!-- This assembly unpacks the source dependencies
     into a directory.  Normally the maven-dependency-plugin
     is suitable for this but it currently does not resolve
     classified artifacts in the reactor correctly.  Using this as
     a workaround for now -->
<assembly>
  <includeBaseDirectory>false</includeBaseDirectory>
  <id>all-sources</id>
  <formats>
    <format>dir</format>
  </formats>
  
  <dependencySets>

    <!-- Include the sources jars -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.example.hack:hack-ai:jar:sources</include>
	<include>com.projectdarkstar.example.hack:hack-client:jar:sources</include>
	<include>com.projectdarkstar.example.hack:hack-server:jar:sources</include>
	<include>com.projectdarkstar.example.hack:hack-shared:jar:sources</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory></outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    
  </dependencySets>
  
</assembly>
