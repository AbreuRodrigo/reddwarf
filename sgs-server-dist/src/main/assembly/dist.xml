<assembly>
  <formats>
    <format>zip</format>
  </formats>
  
  <dependencySets>

    <!-- Include the main sgs-server jar -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.server:sgs-server:jar</include>
      </includes>
      <outputDirectory>sgs-server/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- Include the sgs-server source files -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.server:sgs-server:jar:sources</include>
      </includes>
      <outputDirectory>sgs-server/src</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- Include the jar of sgs shared classes in the lib director -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.server:sgs-shared:jar</include>
      </includes>
      <outputDirectory>sgs-server/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    
    <!-- Include the sgs-shared source files -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.server:sgs-shared:jar:sources</include>
      </includes>
      <outputDirectory>sgs-server/src</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- Include the mina-core jar in the mina directory -->
    <dependencySet>
      <includes>
        <include>org.apache.mina:mina-core</include>
      </includes>
      <outputDirectory>mina</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    
    <!-- Include the slf4j jars in the slf4j directory -->
    <dependencySet>
      <includes>
        <include>org.slf4j:slf4j-api</include>
        <include>org.slf4j:slf4j-jdk14</include>
      </includes>
      <outputDirectory>slf4j</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- Include the bdb je jar in the mina directory -->
    <dependencySet>
      <includes>
        <include>com.projectdarkstar.ext.berkeleydb:je</include>
      </includes>
      <outputDirectory>bdb-je</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>

    <!-- Include the sgs-boot bootstrapper -->
    <dependencySet>
      <includes>
        <include>com.projectdarkstar.server:sgs-boot</include>
      </includes>
      <outputDirectory>sgs-server/bin</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
    </dependencySet>
    
    <!-- Unpack the tutorial component -->
    <dependencySet>
      <includes>       
	<include>com.projectdarkstar.server:sgs-tutorial-server-dist:zip</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>sgs-server</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    
    <!-- Unpack the server-api artifact of the sgs-javadoc module
	 into the doc directory -->
    <dependencySet>
      <includes>
	<include>com.projectdarkstar.server:sgs-server-javadoc:jar:api</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
	<excludes>
	  <exclude>META-INF</exclude>
	  <exclude>META-INF/*</exclude>
	  <exclude>options</exclude>
	</excludes>
      </unpackOptions>
      <outputDirectory>sgs-server/javadoc</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
  
  
  <fileSets>
    
    <!-- Include the main distribution license and readme files -->
    <fileSet>
      <directory>src/main/etc</directory>
      <excludes>
        <exclude>README</exclude>
        <exclude>sgs-server/NOTICE.txt</exclude>
        <exclude>sgs-server/NOTICE-gpl</exclude>
      </excludes>
      <outputDirectory>.</outputDirectory>
    </fileSet>

    <!-- Filter the README and NOTICE files to replace parameterized versions -->
    <fileSet>
      <directory>src/main/etc</directory>
      <includes>
        <include>README</include>
        <include>sgs-server/NOTICE.txt</include>
        <include>sgs-server/NOTICE-gpl</include>
      </includes>
      <filtered>true</filtered>
      <outputDirectory>.</outputDirectory>
    </fileSet>

    <!-- Include all of the Berkeley DB binaries except for the Windows
	 DLL -->
    <fileSet>
      <directory>${project.build.directory}/bdb-${bdb.version}</directory>
      <outputDirectory>bdb</outputDirectory>
      <excludes>
	<exclude>win32-x86/libdb_java45.dll</exclude>
      </excludes>
    </fileSet>

    <!-- Include the Windows DLL from the Berkeley DB binaries, and make
	 it executable -->
    <fileSet>
      <directory>${project.build.directory}/bdb-${bdb.version}</directory>
      <outputDirectory>bdb</outputDirectory>
      <includes>
	<include>win32-x86/libdb_java45.dll</include>
      </includes>
      <fileMode>755</fileMode>
    </fileSet>

    <!-- This is here just to get an empty deploy directory -->
    <fileSet>
       <directory>${java.io.tmpdir}</directory>
       <outputDirectory>sgs-server/deploy</outputDirectory>
       <excludes>
           <exclude>**/*</exclude>
        </excludes>
    </fileSet>

  </fileSets>
  
</assembly>
