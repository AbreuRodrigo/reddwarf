<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

  <servlet>
    <servlet-name>UpdateServlet</servlet-name>
    <servlet-class>com.projectdarkstar.tools.dtc.servlets.UpdateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>MasterServlet</servlet-name>
    <servlet-class>com.projectdarkstar.tools.dtc.servlets.MasterServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UpdateServlet</servlet-name>
    <url-pattern>/config/applications/server.do</url-pattern>
    <url-pattern>/config/applications/server-config.do</url-pattern>
    <url-pattern>/config/applications/client.do</url-pattern>
    <url-pattern>/config/applications/client-config.do</url-pattern>
    <url-pattern>/config/applications/probe.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>MasterServlet</servlet-name>
    <url-pattern>/main</url-pattern>
    <url-pattern>/config/*</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>main</welcome-file>
  </welcome-file-list>

</web-app>
